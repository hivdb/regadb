<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="net.sf.regadb.db.UserAttribute" table="user_attribute" schema="public">
    <id name="userAttributeIi" type="java.lang.Integer">
      <column name="user_attribute_ii" />
      <generator class="sequence">
        <param name="sequence">user_attribute_user_attribute_ii_seq</param>
      </generator>
    </id>
    <many-to-one name="valueType" class="net.sf.regadb.db.ValueType" fetch="select" cascade="save-update">
      <column name="value_type_ii" />
    </many-to-one>
    <many-to-one name="settingsUser" class="net.sf.regadb.db.SettingsUser" fetch="select" cascade="save-update">
      <column name="uid" length="50" />
    </many-to-one>
    <property name="name" type="string">
      <column name="name" length="50" />
    </property>
    <property name="value" type="string">
      <column name="value" length="100" />
    </property>
    <property name="data" type="binary">
      <column name="data" />
    </property>
  </class>
</hibernate-mapping>

