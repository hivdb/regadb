<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="net.sf.regadb.db.PatientEventValue" table="patient_event_value" schema="public">
    <composite-id name="id" class="net.sf.regadb.db.PatientEventValueId">
      <key-property name="patientIi" type="int">
        <column name="patient_ii" />
      </key-property>
      <key-property name="eventIi" type="int">
        <column name="event_ii" />
      </key-property>
    </composite-id>
    <version name="version" type="int">
      <column name="version" not-null="true" />
    </version>
    <many-to-one name="patient" class="net.sf.regadb.db.PatientImpl" update="false" insert="false" fetch="select" cascade="save-update">
      <column name="patient_ii" not-null="true" />
    </many-to-one>
    <many-to-one name="eventNominalValue" class="net.sf.regadb.db.EventNominalValue" fetch="select" cascade="save-update">
      <column name="nominal_value_ii" />
    </many-to-one>
    <many-to-one name="event" class="net.sf.regadb.db.Event" update="false" insert="false" fetch="select" cascade="save-update">
      <column name="event_ii" not-null="true" />
    </many-to-one>
    <property name="value" type="string">
      <column name="value" length="100" />
    </property>
  </class>
</hibernate-mapping>

