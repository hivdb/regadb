<assembly>
	<id>cli</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/classes/rega/genotype</directory>
			<outputDirectory>/rega/genotype</outputDirectory>
			<excludes>
				<exclude>ui/**</exclude>
			</excludes>	
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<includes>
				<include>jargs:jargs</include>
				<include>jdom:jdom</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>

