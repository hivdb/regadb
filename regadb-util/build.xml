<project name="regadb-util" default="all" basedir=".">
  <description>
    RegaDB build file for regadb-util
  </description>
  <import file="../common.xml"/>
  
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="proj.name" value="regadb-util"/>
  <property name="proj.version" value="0.9"/>
	
  <target name="buildinfo" depends="clean">
    <tstamp>
      <format property="build.time" pattern="yyyy-MM-dd HH:mm" />
    </tstamp>        
    <exec failifexecutionfails="false" executable="${src}/net/sf/regadb/util/version/git-get-commit" outputproperty="commit.id"><arg value="id"/></exec>
    <exec failifexecutionfails="false" executable="${src}/net/sf/regadb/util/version/git-get-commit" outputproperty="commit.time"><arg value="time"/></exec>
    <exec failifexecutionfails="false" executable="${src}/net/sf/regadb/util/version/git-get-commit" outputproperty="commit.author"><arg value="author"/></exec>
    <exec failifexecutionfails="false" executable="whoami" outputproperty="build.author"/>
    <exec failifexecutionfails="false" executable="uname" outputproperty="build.system"><arg value="-a"/></exec>

    <propertyfile file="src/net/sf/regadb/util/version/version.properties"
        comment="This file is automatically generated - DO NOT EDIT">        
      <entry key="build.time" value="${build.time}"/>
      <entry key="build.author" value="${build.author}"/>
      <entry key="build.system" value="${build.system}"/>
      <entry key="commit.id" value="${commit.id}"/>
      <entry key="commit.time" value="${commit.time}"/>
      <entry key="commit.author" value="${commit.author}"/>
    </propertyfile>
  </target>

  <target name="init" depends="buildinfo">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
    <mkdir dir="${dist}"/>
  </target>

  <target name="compile" description="compile the source" depends="init" >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac target="1.5" debug="on" srcdir="${src}" destdir="${build}">
  		<classpath refid="project.classpath"/>
    </javac>
    <copy todir="${build}/net/sf/regadb/util/version">
      <fileset dir="${src}/net/sf/regadb/util/version" includes="**/*.properties"/>
    </copy>
  </target>

  <target name="dist" description="Make jar file" depends="compile" >
    <!-- Put everything in ${build} into the jar file -->
    <jar jarfile="${dist}/${proj.name}-${proj.version}.jar" basedir="${build}"/>
  	
    <jar jarfile="${dist}/${proj.name}-test-email.jar" basedir="${build}">
      <manifest>
  	    <attribute name="Main-Class" value="net.sf.regadb.util.mail.MailUtils"/>
  	    <attribute name="Class-Path" value="${jar-dependencies}"/>
      </manifest>
    </jar>
	
    <antcall target="copy-lib-to-libpool" />
    <antcall target="create-package" />
  </target>
  
  <!-- Clean up -->
  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>

  <target name="all" description="Do the build" depends="dist" />
</project>
