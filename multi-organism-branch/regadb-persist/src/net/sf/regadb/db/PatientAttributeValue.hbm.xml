<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="net.sf.regadb.db.PatientAttributeValue" table="patient_attribute_value" schema="public">
    <id name="patientAttributeValueIi" type="java.lang.Integer">
      <column name="patient_attribute_value_ii" />
      <generator class="sequence">
        <param name="sequence">patient_attribute_value_patient_attribute_value_ii_seq</param>
      </generator>
    </id>
    <version name="version" type="int">
      <column name="version" not-null="true" />
    </version>
    <many-to-one name="attribute" class="net.sf.regadb.db.Attribute" fetch="select" cascade="save-update">
      <column name="attribute_ii" not-null="true" />
    </many-to-one>
    <many-to-one name="patient" class="net.sf.regadb.db.PatientImpl" fetch="select" cascade="save-update">
      <column name="patient_ii" not-null="true" />
    </many-to-one>
    <many-to-one name="attributeNominalValue" class="net.sf.regadb.db.AttributeNominalValue" fetch="select" cascade="save-update">
      <column name="nominal_value_ii" />
    </many-to-one>
    <property name="value" type="string">
      <column name="value" length="100" />
    </property>
  </class>
</hibernate-mapping>

