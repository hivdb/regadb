<project name="regadb-analyses" default="all" >
    <description>
        RegaDB build file
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>

  <target name="init">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
    <mkdir dir="${dist}"/>
  </target>

  <target name="compile" description="compile the source" depends="init" >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="dist" description="Make jar file" depends="compile" >
    <!-- Put everything in ${build} into the regadb-analyses.jar file -->
    <jar jarfile="${dist}/regadb-analyses.jar" basedir="${build}"/>
  </target>
	
  <!-- Clean up -->
  <target name="clean">
	  <delete dir="${build}"/>
	  <delete dir="${dist}"/>
  </target>

  <target name="all" description="Do the build" depends="dist" />
</project>