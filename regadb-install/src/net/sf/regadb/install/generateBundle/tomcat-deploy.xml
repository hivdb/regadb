<?xml version="1.0" encoding="UTF-8"?>
<project name="tomcat-deploy" basedir=".">
    <description>
        Ant project to deploy projects in tomcat
    </description>
    
    <taskdef name="deploy"    classname="org.apache.catalina.ant.DeployTask"/>

	<target name="tomcat-deploy" description="Install RegaDB">
    	<deploy url="http://localhost:8080/manager" username="regadb_user" password="regadb_password"
            path="/regadb" war="${warfile}"/>
  	</target>
</project>